@model CourseProfessor
@{
    Layout = "_Layout";
}

<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Course</span>
    </div>

    <div>
        <form method="post" asp-action="CreateCourse" class="row">
            <div class="mb-3">
                <label asp-for="@Model.Courses.Name" class="form-label">Courses Name</label>
                <input type="text"
                       asp-for="@Model.Courses.Name"
                       class="form-control"
                       placeholder="" />
                <span  class="text-danger"></span>

            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.Courses.ProfessorId" class="form-label">Professor</label>
                <select class="form-select "
                        asp-for="@Model.Courses.ProfessorId">
                    <option hidden>Select one</option>
                    @{
                        foreach (var item in Model._professor)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }

                </select>
                <span  class="text-danger"></span>
            </div>


            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>